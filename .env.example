# Agentic-RAG Environment Configuration
# Copy this file to .env and update values as needed

# ===================================
# Database Configuration
# ===================================
DATABASE_URL=jdbc:postgresql://localhost:5432/ragdb
DATABASE_USER=rag_user
DATABASE_PASSWORD=rag_pass

# ===================================
# LLM Configuration
# ===================================
LLM_BASE_URL=http://localhost:8081
LLM_API_KEY=dummy-key-for-mock
LLM_MODEL=gpt-4
LLM_TIMEOUT=30000

# ===================================
# OpenSearch Configuration
# ===================================
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_INDEX=documents
OPENSEARCH_TIMEOUT=5000

# ===================================
# Redis Configuration
# ===================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_TIMEOUT=2000

# ===================================
# Cloud Engine Configuration
# ===================================
CLOUD_ENGINE_URL=http://localhost:8082
CLOUD_TIMEOUT=10000

# ===================================
# Application Configuration
# ===================================
SERVER_PORT=8080
LOG_LEVEL=INFO
SPRING_PROFILES_ACTIVE=local

# ===================================
# RAG Configuration
# ===================================
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
RAG_MAX_CONTEXT_TOKENS=4000

# ===================================
# Agent Configuration
# ===================================
AGENT_MAX_ITERATIONS=5
AGENT_PLANNING_TIMEOUT=30000
AGENT_TOOL_TIMEOUT=10000
